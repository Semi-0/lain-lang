{
  "name": "lain-lang",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "type": "module",
  "module": "index.ts",
  "main": "index.ts",
  "scripts": {
    "lain-host": "bun run ./src/cli/host.ts",
    "lain-peer": "bun run ./src/cli/peer.ts",
    "lain-repl": "bun run ./src/cli/repl.ts",
    "generate": "buf generate && bun run ./scripts/patch-protobuf-imports.ts",
    "grpc-server": "bun run ./src/cli/grpc_server.ts",
    "grpc-server:debug": "DEBUG_GRPC=1 DEBUG_COMPILE=1 bun run ./src/cli/grpc_server.ts",
    "connect-server": "bun run ./src/cli/connect_server.ts",
    "connect-server:debug": "DEBUG_GRPC=1 DEBUG_COMPILE=1 bun run ./src/cli/connect_server.ts"
  },
  "bin": {
    "lain-host": "./src/cli/host.ts",
    "lain-peer": "./src/cli/peer.ts",
    "lain-repl": "./src/cli/repl.ts"
  },
  "exports": {
    ".": "./index.ts",
    "./compiler": "./compiler/index.ts",
    "./compiler/*": "./compiler/*.ts",
    "./compiler/env": "./compiler/env/index.ts",
    "./compiler/env/*": "./compiler/env/*.ts",
    "./DB": "./DB/index.ts",
    "./DB/*": "./DB/*.ts",
    "./src/cli/host": "./src/cli/host.ts",
    "./src/cli/peer": "./src/cli/peer.ts",
    "./src/cli/repl": "./src/cli/repl.ts",
    "./src/cli/*": "./src/cli/*.ts",
    "./src/p2p/*": "./src/p2p/*.ts"
  },
  "dependencies": {
    "@bufbuild/connect": "^0.13.0",
    "@bufbuild/protobuf": "1.10.1",
    "@connectrpc/connect": "^1.5.0",
    "@connectrpc/connect-node": "^1.5.0",
    "@grpc/grpc-js": "^1.12.0",
    "d3-force": "^3.0.0",
    "drawille-canvas": "^1.2.1",
    "effect": "^3.16.8",
    "generic-handler": "workspace:*",
    "gun": "^0.2020.1237",
    "parse-combinator": "^1.0.1",
    "pmatcher": "workspace:*",
    "ppropogator": "workspace:*",
    "protobuf-wire": "npm:@bufbuild/protobuf@2.10.2",
    "sando-layer": "workspace:*",
    "uuid": "^13.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.28.0",
    "@bufbuild/protoc-gen-connect-es": "^0.13.0",
    "@bufbuild/protoc-gen-es": "^1.2.0",
    "@types/bun": "latest",
    "ts-proto": "^2.10.0"
  }
}
